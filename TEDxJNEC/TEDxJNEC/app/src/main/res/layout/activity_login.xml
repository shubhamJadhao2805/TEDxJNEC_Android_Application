<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141414"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarThumbVertical="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="260dp"
                android:layout_height="66dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/tedxlogo"
                android:scaleType="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="417dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/loginback"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textColor="#ED444444"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="277dp"
                    android:layout_height="48dp"
                    android:background="@drawable/tex"
                    android:ems="10"
                    android:hint="Enter email"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textColor="#F8313030"
                    android:textColorHint="#C6AFA8A8" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="295dp"
                    android:layout_height="12dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="277dp"
                    android:layout_height="48dp"
                    android:background="@drawable/tex"
                    android:ems="10"
                    android:hint="Enter password"
                    android:inputType="textPersonName|textPassword"
                    android:paddingLeft="15dp"
                    android:textColor="#F8313030"
                    android:textColorHint="#C6AFA8A8" />

                <View
                    android:id="@+id/view"
                    android:layout_width="296dp"
                    android:layout_height="28dp" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="286dp"
                    android:layout_height="53dp"
                    android:background="@drawable/log"
                    android:onClick="logIn" />

                <Button
                    android:id="@+id/button6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="signUp"
                    android:text=" Donâ€™t have an account? Sign Up"
                    android:textColor="#D53F3E3E" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>